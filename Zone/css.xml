body, div { padding:0px; margin:0px; border:0px; color:black; background-color:white }

a, a:visited { text-decoration:none; font-weight:bold; color:#206e16;  }
a:hover { color:#ff8f00 }

.small_button { border:0px; cursor:pointer; vertical-align:baseline }
.app { padding-left:5px; background:white; border:1px solid white; cursor:pointer; }
.app_selected { font-weight:bold; cursor:pointer; }
.app_over { border:1px inset white; background-color:#CFCFCF; cursor:pointer; }

.wdtitle { border-width:1px; border-style:none none dotted none; border-color:#CFCFCF;  }
.wdmenu { border: 0px   }
.wdcols { border-color:#CFCFCF; border-style:none none none dotted; padding:0px; border-width:1px; height:100%; }

.wdsvc { margin: 6px 3px 10px 3px; }
.wdsvc_title { background-color:#dbe6d9; border-style:none none solid none; border-color:#CFCFCF; border-width:1px; font-weight:bold; vertical-align:bottom; }
.wdsvc_content { padding-left:5px; border-width:1px; border-style: none none none dotted; border-color:#CFCFCF;  }
.wdsvc_warning { font-style:italic; font-size:80%;  }

.wdparamb { padding:5px; margin:5px; border-color:#CFCFCF; border-style: solid; border-width:1px; }

.wdbuttonb { text-align:right; border-top:1px solid #CFCFCF; margin: 5px 0px 5px 0px; }
.wdtitleb { text-align:center; font-weight:bold; border-bottom:1px solid #CFCFCF; margin: 5px 0px 10px 0px;  }
.wdtitleb1 { text-align:left; border-bottom:1px solid #CFCFCF; border-bottom:1px solid #CFCFCF; margin: 5px 0px 5px 0px;  }
