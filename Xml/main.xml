<html>
<head>

[ZONE WEBDESK:HEAD]

[CSS:REF]

<style type="text/css">
[CSS:CODE]
</style>


[JS:REF]

<script>
[JS:CODE]
var isIE = [IF ISIE]true[ENDIF ISIE][IFNOT ISIE]false[ENDIF ISIE];
var isMBarStatic = [IF IsMBarStatic]true[ENDIF IsMBarStatic][IFNOT IsMBarStatic]false[ENDIF IsMBarStatic];
var isOpen = [IF IsMBarStatic]true[ENDIF IsMBarStatic][IFNOT IsMBarStatic]false[ENDIF IsMBarStatic];

function initWebdesk() {
   getUnreadMsgCount();
   getWaitingEventCount();
   getAffectDocCount();
  computefbodywh();  
  [BLOCK barAppList]
  addInBar([id], '[name]', '[jsname]', '[iconsrc]', '[params]' ); [ENDBLOCK barAppList]

}

addEvent(window,"load", initWebdesk);
addEvent(window, "resize", computefbodywh);

</script>  
</head>
<body scrollable="no">


<div id="wdtitle" class="wdhead">
<table style="width:100%"><tr style="vertical-align:top">
<td class="small_button" onclick="isOpen = !isOpen; computefbodywh();" style="width:30%; text-align:left;"><img style="vertical-align:bottom;"  class="small_button" title="[TEXT:wd open/close menu]" id="wdmbarmng" src="[IFNOT IsMBarStatic][IMGF:wd_open_bar.gif:0,0,0|COLOR_BLACK][ENDIF IsMBarStatic][IF IsMBarStatic][IMGF:wd_right_bar.gif:0,0,0|COLOR_BLACK][ENDIF IsMBarStatic]"> <span id="wdappsel">--</span></td>
<td style="text-align:center"><span class="appbar" id="appbar"></span></td>
<td style="text-align:center">[MAINTENANCE]</td>
<td style="text-align:right;">
[IF fgsearch_installed]<form onsubmit="if (document.getElementById('rsearch').value=='') return false; args='&keyword='+document.getElementById('rsearch').value;  runapp([fgsearch_id],'[fgsearch_name]',args,true); return false" style="display:inline" method="POST"><input style="font-size:90%" type="text" id="rsearch"></form>&nbsp;[ENDIF fgsearch_installed]
[IF Workspace]<img src="[IMGF:wd_docreceived.gif:0,0,0|COLOR_BLACK]" onclick="getAffectDocCount()" class="small_button" title="[TEXT:wd document received]"><span id="docreceived" style="font-weight:bold">?</span>&nbsp;[ENDIF Workspace]
[IF MailAccount]<img src="[IMGF:wd_mailcount.gif:0,0,0|COLOR_BLACK]" onclick="getUnreadMsgCount()" class="small_button" title="[TEXT:wd unread mail count]"><span id="ureadmail" style="font-weight:bold">?</span>&nbsp;[ENDIF MailAccount]
[IF Agenda]<img src="[IMGF:wd_rvcount.gif:0,0,0|COLOR_BLACK]" onclick="getWaitingEventCount()" class="small_button" title="[TEXT:wd waiting event count]"><span id="waitingrv" style="font-weight:bold">?</span>&nbsp;[ENDIF Agenda]|
<span id="curdate">jj:mm:yy hh:mm</span> | [userDomain] | [userRealName] <img id="logo" onclick="document.authent.submit()" title="[TEXT:Click here to login]" class="small_button" src="[IMGF:wdconnect.gif:0,0,0|COLOR_BLACK]">&nbsp;|&nbsp;[ZONE WEBDESK:ANAKEEN]&nbsp;</td>
</tr></table>
</div>

<div id="wdmenu" style="background-color:[menu_bgcolor];" class="wdmenu">
<div id="inmenu" style="  padding: 0px 0px 0px [menu_imgwidth]px; background-image: url([menu_bgimage]);">

[BLOCK appList]
<div id="app[id]"
     class="app" onmouseover="if (currentIdApp!=[id]) this.className='app app_over'" 
     onmouseout="if (currentIdApp!=[id]) this.className='app'" title="[description]" 
     onclick="runappm(event, [id], '[name]', '[jsname]', '[iconsrc]','[params]', true); return false;" 
     oncontextmenu="openAppMenu(event, [id], '[name]', '[jsname]', '[iconsrc]','[params]'); return false;">
<img needresize="1" src="[iconsrc]" style="width:[SIZE_IMG-XX-SMALL]; vertical-align:baseline">&nbsp;[short_name]
</div>[ENDBLOCK appList]

<div class="app">&nbsp;</div>

[BLOCK specialAppList]
<div id="app[id]" 
  class="app" 
  onmouseover="if (currentIdApp!=[id]) this.className='app app_over'" 
  onmouseout="if (currentIdApp!=[id]) this.className='app'" title="[description]" 
  onclick="runappm(event, [id], '[name]', '[jsname]', '[iconsrc]', '[params]', true); return false;"
  oncontextmenu="openAppMenu(event, [id], '[name]', '[jsname]', '[iconsrc]','[params]'); return false;">
<img needresize="1"  src="[iconsrc]" style="width:[SIZE_IMG-XX-SMALL]; vertical-align:baseline">&nbsp;[short_name]
</div>[ENDBLOCK specialAppList]

</div>

<div title="[TEXT:wd fixe/release menu]" id="wdcmdtext" style="padding:10px 0px 0px 0px ; cursor:pointer; text-align:center; background-color:[COLOR_A6]; border:1px [IF IsMBarStatic]inset[ENDIF IsMBarStatic][IFNOT IsMBarStatic]outset[ENDIF IsMBarStatic] [COLOR_A6]" onclick="alternMBar();"><img src="[IMG:1x1.gif]"></div>

</div>


<div id="wdbody" style="float:left;  border:0px solid red; width:auto;">
[BLOCK appListBody]<iframe id="fbody[id]" name="fbody[id]"  style="display:none; border:0px;" src="[IMG:1x1.gif]" scrolling="needed"></iframe>
[ENDBLOCK appListBody]
[BLOCK specialAppListBody]<iframe id="fbody[id]" name="fbody[id]"  style="display:none; border:0px;"  src="[IMG:1x1.gif]" scrolling="needed"></iframe>
[ENDBLOCK specialAppListBody]</div>

<form style="display:inline" action="[CORE_STANDURL]&app=AUTHENT&action=LOGOUT" method="POST" name="authent">
  <input type="hidden" name="SeenBefore" value="1">
  <input type="hidden" name="logout" value="Y">
  <input type="hidden" name="rapp" value="WEBDESK">
  <input type="hidden" name="raction" value="MAIN">
  <input type="hidden" name="rurl" value="[CORE_STANDURL]">
  <input type="hidden" name="OldAuth" value="[PHP_AUTH_USER]">
</form>

<div id="ctxappmenu" style="background-color:[COLOR_WHITE]; border:1px solid [COLOR_A7]; margin:0px; padding:3px; position:absolute; left:0px; top:0px; display:none" >
<div style="border-bottom:1px solid [COLOR_A7]" onmouseover="cancelTempoAppMenu()" 
     onmouseout="setTempoAppMenu()" >
  <img id="appmenu_ico" src="" style="width:[SIZE_IMG-XX-SMALL]; vertical-align:baseline">&nbsp;<span id="appmenu_title">[short_name]</span>
</div>
<div class="app" 
     onmouseover="this.className='app app_over'; cancelTempoAppMenu()" 
     onmouseout="this.className='app'; setTempoAppMenu()" 
     onclick="if (mcurApp.id==-1) return false; runapp(mcurApp.id, mcurApp.sid, mcurApp.prm, false); closeAppMenu()">
[TEXT:wd display application]</div>

<div class="app"
     onmouseover="this.className='app app_over'; cancelTempoAppMenu()" 
     onmouseout="this.className='app'; setTempoAppMenu()" 
     onclick="if (mcurApp.id==-1) return false; runapp(mcurApp.id, mcurApp.sid, mcurApp.prm, true); closeAppMenu()">
[TEXT:wd reload (force) application]</div>

<div class="app"
     onmouseover="this.className='app app_over'; cancelTempoAppMenu()" 
     onmouseout="this.className='app'; setTempoAppMenu()" 
     onclick="if (mcurApp.id==-1) return false; subwindowm(0,0,'_tab', '[CORE_BASEURL]app='+mcurApp.sid+mcurApp.prm); closeAppMenu()">
[TEXT:wd open in new window]</div>

[IF canChangeDefApp]<div class="app"
     onmouseover="this.className='app app_over'; cancelTempoAppMenu()" 
     onmouseout="this.className='app'; setTempoAppMenu()" 
     onclick="if (mcurApp.id==-1) return false; setDefaultApp(mcurApp.id, mcurApp.sid, mcurApp.name, mcurApp.ico, mcurApp.prm, false); closeAppMenu()">
[TEXT:wd default application]</div>
[ENDIF canChangeDefApp]

[IF canSetTopBar]<div class="app" style="padding:1px; margin:0px";
     onmouseover="cancelTempoAppMenu()" 
     onmouseout="setTempoAppMenu()" 
<hr style="padding:0px; margin:0px; border:0px; border-top:1px solid [COLOR_A7]"></div>

<div class="app" 
     onmouseover="this.className='app app_over'; cancelTempoAppMenu()" 
     onmouseout="this.className='app'; setTempoAppMenu()" 
     onclick="if (mcurApp.id==-1) return false; adddelAppShortCut(mcurApp.id, mcurApp.sid, mcurApp.name, mcurApp.ico, mcurApp.prm, false); closeAppMenu()">
[TEXT:wd add/remove shortcut]</div>
[ENDIF canSetTopBar]
</div>

<script>
// Load default app
runapp([defid], '[defname]', '[defparams]', false);
</script>
</body>
</html>
