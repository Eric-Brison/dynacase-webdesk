[ZONE CORE:HTMLHEAD]
<script>
var size='normal';
var style='[STYLE]';
function viewPreviewTheme(sty) {
  if (sty) style=sty;
  var ifr=document.getElementById('previewtheme');
  if (ifr) {
    ifr.src='[CORE_STANDURL]&app=WEBDESK&action=PREVIEWTHEME&style='+style+'&size='+size;
  }
}
function changeTheme() {
  var r;
  if (style) {
    r=setparamu("CORE","STYLE",style);
    if (!r) alert('error in change style');
  }
  if (size) {
     r=setparamu("CORE","FONTSIZE",size);
    if (!r) alert('error in change size');
  }
  if (r) if (window.parent) if (window.parent.parent) window.parent.parent.location.reload();
  
}


</script>
<h4>[TEXT:Theme chooser]</h4>


<table>
<tr><td colspan="2">
 <select name="styleid" onchange="viewPreviewTheme(this.options[this.selectedIndex].value)">
[BLOCK SELSTYLE]
         <option [selected] value="[name]">[name] - [description]</option> [ENDBLOCK SELSTYLE]
       </select>
<input title="[TEXT:small size]" onclick="window.size='small';viewPreviewTheme();return false;" type="image" style="width:15px;height:15px" src="[IMG:zoomsize.png]">
<input title="[TEXT:normal size]" onclick="window.size='normal';viewPreviewTheme();return false;" type="image" style="width:20px;height:20px" src="[IMG:zoomsize.png]">
<input title="[TEXT:large size]" onclick="window.size='large';viewPreviewTheme();return false;" type="image" style="width:30px;height:30px" src="[IMG:zoomsize.png]">
<input title="[TEXT:x-large size]" onclick="window.size='x-large';viewPreviewTheme();return false;" type="image" style="width:40px;height:40px" src="[IMG:zoomsize.png]">
</td></tr>
<td align="center">

</td>
<td>
<iframe id="previewtheme" width="400px" height="250px" style="border:none" src="[CORE_STANDURL]&app=WEBDESK&action=PREVIEWTHEME"></iframe></td></tr></table>
<hr>
<div style="text-align:right;width:100%"><input type="button" onclick="changeTheme();return false;" value="[TEXT:Apply]" title="[TEXT:Change your theme]" ></div>
