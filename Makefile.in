PACKAGE = @PACKAGE@
VERSION = @VERSION@
utildir = @PUBRULE@
appname = @PACKAGE@
pubdir  = @prefix@
srcdir  = @srcdir@


export pubdir utildir appname

TAR = gtar
GZIP_ENV = --best

export targetdir PACKAGE

#SUBDIR=  Class Images Zone Xml Action Css Javascript Families Themes OSync Batch Api Doc
SUBDIR=  Xml Action Css Javascript Images Zone Freedom Services

include $(utildir)/PubRule

DISTFILES += $(SUBDIR) \
	$(PACKAGE).app \
        RELEASE VERSION \
	71_webdesk.conf \
	Freedom/webdesk.csv

$(pubdir)/$(appname)/71_webdesk.conf : 71_webdesk.conf
	cp $< $@

$(pubdir)/$(appname)/webdesk.csv : Freedom/webdesk.csv 
	cp Freedom/webdesk.csv $(pubdir)/$(appname)

publish: $(pubdir)/$(appname)/webdesk.csv \
	$(pubdir)/$(appname)/71_webdesk.conf

clean:
	rm -f config.log config.status configure WEBDESK-*.tar.gz WEBDESK.php WEBDESK.spec 
	rm -rf autom4te-2.53.cache
	find . -name \*~  -exec rm {} \;
